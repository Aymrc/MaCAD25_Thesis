//TO ASSIGN OSMs NODES COLORS BY USE
MATCH (n:UrbanNode)
WITH n, replace(n.use, " ", "_") AS sanitized_use
FOREACH (_ IN CASE WHEN sanitized_use = "residential" THEN [1] ELSE [] END | SET n:UrbanNode_residential)
FOREACH (_ IN CASE WHEN sanitized_use = "apartments" THEN [1] ELSE [] END | SET n:UrbanNode_apartments)
FOREACH (_ IN CASE WHEN sanitized_use = "public_space" THEN [1] ELSE [] END | SET n:UrbanNode_public_space)
FOREACH (_ IN CASE WHEN sanitized_use = "commercial" THEN [1] ELSE [] END | SET n:UrbanNode_commercial)
FOREACH (_ IN CASE WHEN sanitized_use = "office" THEN [1] ELSE [] END | SET n:UrbanNode_office)
FOREACH (_ IN CASE WHEN sanitized_use = "yes" THEN [1] ELSE [] END | SET n:UrbanNode_yes)
FOREACH (_ IN CASE WHEN sanitized_use = "unknown" THEN [1] ELSE [] END | SET n:UrbanNode_unknown)


//SEE GRAPH
MATCH (n) RETURN n